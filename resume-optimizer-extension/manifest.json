{
  "manifest_version": 3,
  "name": "AI Resume & Cover Letter Optimizer",
  "version": "1.0.0",
  "description": "Extracts job descriptions, optimizes resumes, and generates cover letters using AI with user authentication.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://your-backend-render-url.com/*",
    "resume-coverletter-optimizer.vercel.app"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.linkedin.com/jobs/view/*",
        "https://www.linkedin.com/jobs/search/*",
        "https://www.indeed.com/jobs*",
        "https://www.indeed.com/viewjob*",
        "https://www.indeed.com/q-*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://www.linkedin.com/*", "https://www.indeed.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}